
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', '#', :class => 'btn btn-mini btn-danger', :onclick => "dangerConfirm(#{product.id},'#{product.name}')" %>
        </td>
      </tr>
    <% end %>
  </tbody>
