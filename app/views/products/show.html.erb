<% if flash[:notice] %>
<div class="alert alert-success">
  <a class="close" data-dismiss="alert">Ã—</a>
  <span><%= flash[:notice]%></span>
</div>
<% end %>
<div>
  <ul class="breadcrumb">
    <li>
      <%= link_to 'Home', products_path %> <span class="divider">/</span>
    </li>
    <li>
      <%= link_to 'Products', products_path %> <span class="divider">/</span>
    </li>
    <li class="active"><%= @product.name %></li>
  </ul>  
</div>
<%= render 'remove' %>
<div class="row">
  
  <section class="span6">
    <div class="page-header">
      <h1>
      <%= @product.name %>
      </h1>
    </div>
    <div class="row">
      <div class="span3">
        <h3>Price</h3>
        <p>$ 399.22</p>
      </div>
      <div class="span3">
        <p>
          <h3>Stores</h3>        
          <adress>
            175 Curtner Avenue<br/>
            San Jose, CA<br/>
            United States<br/>
          </adress>
          <a href="#">Map</a>
        </p>
      </div>
    </div>
    <p>
      <h3>Description</h3>
      <%= @product.description %>
    </p>
    <div class="form-actions">
      <%= link_to 'Back', products_path, :class => 'btn'  %>
      <%= link_to 'Edit', edit_product_path(@product), :class => 'btn' %>
